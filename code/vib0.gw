#import Modules

var SinOsc sin ~> dac;

var SinOsc lfo ~> blackhole;
4 => lfo.freq;
5 => lfo.amp;

var int base;

spork {
  while(true) {
    lfo.last() + base => sin.freq;
    samp => now;
  }
};

repeat(3) {
  foreach(note : [ `c3`, `d3`, `e3`, `g3` ]) {
    note => base;
    .25::second => now;
  }
}
